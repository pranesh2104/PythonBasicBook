<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    tools:context=".Topics">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/back"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:background="#FFF">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="60dp"
          android:src="@drawable/book"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="PYTHON PDF'S"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:typeface="monospace" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:layout_marginTop="130dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#FAFAF1"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:id="@+id/basic"
            android:onClick="python_basic"
            android:text="1 ->PYTHON BASICS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#FAFAF2"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:id="@+id/conditional"
            android:onClick="conditional"
            android:text="2 ->CONDITIONAL  AND LOOPING STATEMENTS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#FAFAF3"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:onClick="fun"
            android:id="@+id/fun"
            android:text="3 ->FUNCTIONS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#FAFAF4"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:id="@+id/exception"
            android:onClick="excep"
            android:text="4 ->EXCEPTION HANDLING"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#FAFAF5"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:id="@+id/filehand"
            android:onClick="file"
            android:text="5 ->FILE HANDLING"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />



    </LinearLayout>









</androidx.drawerlayout.widget.DrawerLayout>